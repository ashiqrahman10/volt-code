# Example Environment Configuration
# Copy this file to config.env and fill in your actual values
# DO NOT commit config.env to version control

# DigitalOcean Spaces Configuration
DO_SPACES_KEY=your_do_spaces_key_here
DO_SPACES_SECRET=your_do_spaces_secret_here
DO_SPACES_BUCKET=your_bucket_name_here
DO_SPACES_REGION=sfo3

# Groq API Configuration
# Multiple API keys can be provided (comma-separated) for load balancing
GROQ_API_KEYS=your_groq_api_key_1,your_groq_api_key_2
GROQ_MODEL=llama-3.3-70b-versatile

# Gateway Configuration
GATEWAY_URL=http://localhost:8080

# Monitoring Thresholds
MEMORY_THRESHOLD=80.0

# Loki S3 Configuration (for Kubernetes deployment)
LOKI_S3_BUCKET_NAME=your_bucket_name_here
LOKI_S3_ENDPOINT=https://sfo3.digitaloceanspaces.com
LOKI_S3_REGION=sfo3
LOKI_S3_ACCESS_KEY_ID=your_access_key_here
LOKI_S3_SECRET_ACCESS_KEY=your_secret_key_here

# Loki Push URL (for Promtail)
LOKI_PUSH_URL=https://your-endpoint.com/loki/api/v1/push

# Prometheus Remote Write URL
PROMETHEUS_REMOTE_WRITE_URL=https://your-endpoint.com/api/v1/receive
